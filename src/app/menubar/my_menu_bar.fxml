<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml/1">
  <MenuBar VBox.vgrow="NEVER">
    <menus>
      <Menu mnemonicParsing="false" text="File">
        <items>
          <MenuItem mnemonicParsing="false" text="New" onAction="#openFileMenuItemOnAction" />
          <MenuItem mnemonicParsing="false" text="Open…" />
          <Menu mnemonicParsing="false" text="Open Recent" />
          <SeparatorMenuItem mnemonicParsing="false" />
          <MenuItem mnemonicParsing="false" text="Close" />
          <MenuItem mnemonicParsing="false" text="Save" />
          <MenuItem mnemonicParsing="false" text="Save As…" />
          <MenuItem mnemonicParsing="false" text="Revert" />
          <SeparatorMenuItem mnemonicParsing="false" />
          <MenuItem mnemonicParsing="false" text="Preferences…" />
          <SeparatorMenuItem mnemonicParsing="false" />
          <MenuItem mnemonicParsing="false" text="Quit" onAction="#quitMenuItemOnAction" />
        </items>
      </Menu>
      <Menu mnemonicParsing="false" text="Edit">
        <items>
          <MenuItem mnemonicParsing="false" text="Undo" />
          <MenuItem mnemonicParsing="false" text="Redo" />
          <SeparatorMenuItem mnemonicParsing="false" />
          <MenuItem mnemonicParsing="false" text="Cut" />
          <MenuItem mnemonicParsing="false" text="Copy" />
          <MenuItem mnemonicParsing="false" text="Paste" />
          <MenuItem mnemonicParsing="false" text="Delete" />
          <SeparatorMenuItem mnemonicParsing="false" />
          <MenuItem mnemonicParsing="false" text="Select All" />
          <MenuItem mnemonicParsing="false" text="Unselect All" />
        </items>
      </Menu>
      <Menu mnemonicParsing="false" text="Layout">
        <items>

          <RadioMenuItem mnemonicParsing="false" text="Flow Layout" onAction="#flowLayoutMenuItemOnAction">
            <toggleGroup>
              <ToggleGroup fx:id="layoutGroup"/>
            </toggleGroup>
          </RadioMenuItem>
          <RadioMenuItem mnemonicParsing="false" text="Top Layout" onAction="#flowLayoutMenuItemOnAction" toggleGroup="$layoutGroup"/>
          <RadioMenuItem mnemonicParsing="false" text="Left Layout" onAction="#flowLayoutMenuItemOnAction" toggleGroup="$layoutGroup"/>
          <RadioMenuItem mnemonicParsing="false" text="Right Layout" onAction="#flowLayoutMenuItemOnAction" toggleGroup="$layoutGroup"/>
          <RadioMenuItem mnemonicParsing="false" text="Bottom Layout" onAction="#flowLayoutMenuItemOnAction" toggleGroup="$layoutGroup"/>

        </items>
      </Menu>
      <Menu mnemonicParsing="false" text="Help">
        <items>
          <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
        </items>
      </Menu>
    </menus>
  </MenuBar>
</fx:root>

